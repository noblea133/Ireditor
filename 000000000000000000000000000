                if (m) {
                    pid = m[1];
                    target = p;
                }
            });
            [span_57](start_span)return { card, pid, target };[span_57](end_span)
        });
    }

    function applyFilter() {
        [span_58](start_span)const vpiID = getVpiID();[span_58](end_span)
